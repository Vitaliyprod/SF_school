<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Date_validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND( TODAY() &gt; Start_Date__c,  ISNEW())</errorConditionFormula>
    <errorDisplayField>Start_Date__c</errorDisplayField>
    <errorMessage>Start date should be greater then current date</errorMessage>
</ValidationRule>
